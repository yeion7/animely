.Item
  margin: 15px
  border-radius: 5px
  overflow: hidden

  &-container
    width: 250px
    height: 300px
    position: relative
    cursor: pointer;

  &:hover
    transform: scale(1.1)

  &-image
    width: 100%
    height: 100%

  &-content
    align-items: center;
    background: linear-gradient(0deg, black, transparent)
    bottom: 0
    color white
    display: flex
    height: 30%
    flex-direction: column
    justify-content: center;
    position: absolute
    text-shadow: rgba(0,0,0,.8) 1px 1px 0;
    width: 100%

  &-title
    font-size: 1.5em
    text-align: center
  &-date
    padding: 5px
